<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view
        android:id="@+id/search_header_view"
        class="com.example.ladyzorzy.peakselapp.search.SearchHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#fff"
        android:elevation="21dp" />


    <RelativeLayout
        android:id="@+id/no_entered_text_view"
        class="com.example.ladyzorzy.peakselapp.search.SearchHeaderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/search_header_view"
        android:background="#fff"
        android:elevation="21dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="No entered text mode" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_results_view"
        class="com.example.ladyzorzy.peakselapp.search.SearchHeaderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_header_view"
        android:background="#fff"
        android:elevation="22dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/search_no_results" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchResultSRecycler"
        class="com.example.ladyzorzy.peakselapp.search.SearchHeaderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_header_view"
        android:background="#fff"
        android:elevation="23dp"
        android:visibility="invisible" />

</RelativeLayout>